{ "name": "bare-select"
, "version": "0.0.0-work-in-progress"
, "description": "A customizable replacement for <select>."

, "dependencies":
  { "as": "0.4.1"
  , "set-immediate-shim": "1.0.1"
  , "stereo": "0.4.0"
  }

, "scripts":
  { "coveralls": "npm run coverage && cat coverage/lcov.info | coveralls"
  , "coverage": "istanbul cover test.js"
  , "view-coverage": "echo 'Generating coverage reports...'; npm run coverage >/dev/null && echo '...done.' && xdg-open ./coverage/lcov-report/index.html >/dev/null"
  , "develop": "nodangel --ignore node_modules --exec 'npm run --silent test:lite'"
  , "test": "jshint . && npm run test:lite"
  , "test:lite": "node test.js | tap-spec"
  }

, "devDependencies":
  { "coveralls": "2.11.2"
  , "istanbul": "0.3.13"
  , "jshint": "2.7.0"
  , "nodangel": "1.3.8"
  , "tap-spec": "2.2.2"

  , "1-liners": "0.1.4"
  , "jsdom": "3.1.2"
  , "tape-catch": "1.0.4"
  , "virtual-dom": "2.0.1"
  }

, "files":
  [ "/*.js"
  , "/module/"
  , "/test/"
  , "/Readme.md"
  , "/License.md"
  ]

, "license": "MIT"
